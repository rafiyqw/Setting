[alias]
    a=add
    aa=add --all
    apa=add --patch
    au=add --update
    av=add --verbose
    ap=apply
    apt=apply --3way
    #############
    b=branch
    ba=branch -a
    bd=branch -d
    bD=branch -D
    bl=blame -b -w
    bnm=branch --no-merged
    br=branch --remote
    bs=bisect
    bsb=bisect bad
    bsg=bisect good
    bsr=bisect reset
    bss=bisect start
    #############
    c=commit -v
    #c!=commit -v --amend
    #cn!=commit -v --no-edit --amend
    ca=commit -v -a
    #ca!=commit -v -a --amend
    #can!=commit -v -a --no-edit --amend
    #cans!=commit -v -a -s --no-edit --amend
    cam=commit -a -m
    csm=commit -s -m
    cas=commit -a -s
    casm=commit -a -s -m
    cb=checkout -b
    cf=config --list
    cl=clone --recurse-submodules
    clean=clean -id
    pristine=reset --hard && git clean -dffx
    cm=checkout $(git_main_branch)
    cd=checkout develop
    cmsg=commit -m
    co=checkout
    count=shortlog -sn
    cp=cherry-pick
    cpa=cherry-pick --abort
    cpc=cherry-pick --continue
    cs=commit -S
    #############
    d=diff
    dca=diff --cached
    dcw=diff --cached --word-diff
    dct=describe --tags $(git rev-list --tags --max-count=1)
    ds=diff --staged
    dt=diff-tree --no-commit-id --name-only -r
    dw=diff --word-diff

    gpull=pull origin "$(git_current_branch)"
    gpush=push origin "$(git_current_branch)"
   
    gsup=branch --set-upstream-to=origin/$(git_current_branch)
    psup=push --set-upstream origin $(git_current_branch)
   
    hh=help
   
    ignore=update-index --assume-unchanged
    ignored=ls-files -v | grep "^[[:lower:]]"
    it-svn-dcommit-push=svn dcommit && git push github $(git_main_branch):svntrunk
   
    l=pull
    lg=log --stat
    lgp=log --stat -p
    lgg=log --graph
    lgga=log --graph --decorate --all
    lgm=log --graph --max-count=10
    lo=log --oneline --decorate
    log=log --oneline --decorate --graph
    loga=log --oneline --decorate --graph --all
   
    m=merge
    mom=merge origin/$(git_main_branch)
    mt=mergetool --no-prompt
    mtvim=mergetool --no-prompt --tool=vimdiff
    mum=merge upstream/$(git_main_branch)
    ma=merge --abort
   
    p=push
    pd=push --dry-run
    pf=push --force-with-lease
    #gpf!=push --force
    poat=push origin --all && git push origin --tags
    pu=push upstream
    pv=push -v
   
    r=remote
    ra=remote add
    rb=rebase
    rba=rebase --abort
    rbc=rebase --continue
    rbd=rebase develop
    rbi=rebase -i
    rbm=rebase $(git_main_branch)
    rbo=rebase --onto
    rbs=rebase --skip
    rev=revert
    rh=reset
    rhh=reset --hard
    roh=reset origin/$(git_current_branch) --hard
    rm=rm
    rmc=rm --cached
    rmv=remote rename
    rrm=remote remove
    rs=restore
    rset=remote set-url
    rss=restore --source
    rst=restore --staged
    ru=reset --
    rup=remote update
    rv=remote -v
   
    sb=status -sb
    sd=svn dcommit
    sh=show
    si=submodule init
    sps=show --pretty=short --show-signature
    sr=svn rebase
    ss=status -s
    st=status
   
    staa=stash apply
    stc=stash clear
    std=stash drop
    stl=stash list
    stp=stash pop
    sts=stash show --text
    stall=stash --all
    su=submodule update
    sw=switch
    swc=switch -c
   
    ts=tag -s
    tv=tag | sort -V
   
    unignore=update-index --no-assume-unchanged
    up=pull --rebase'
    upv=pull --rebase -v'
    upa=pull --rebase --autostash'
    upav=pull --rebase --autostash -v'
    lum=pull upstream $(git_main_branch)'
