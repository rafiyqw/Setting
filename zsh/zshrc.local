# user path
PATH=$PATH:~/.local/bin

# Enable color
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# List shorcut
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'

alias wifi-on='sudo systemctl start wpa_supplicant@wlp3s0'
alias wifi-off='sudo systemctl stop wpa_supplicant@wlp3s0'
